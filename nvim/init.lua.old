vim.opt.clipboard = "unnamedplus"

vim.opt.number = true
-- vim.opt.relativenumber = true 
vim.opt.wrap = false
vim.opt.scrolloff = 8

vim.opt.tabstop = 4
vim.opt.shiftwidth = 4
vim.opt.expandtab = true       
vim.opt.smartindent = true    

vim.opt.backup = false
vim.opt.swapfile = false
vim.opt.undofile = true     

vim.opt.autoindent = true
vim.opt.smartindent = true
vim.opt.cindent = true

-- keymaps 
vim.keymap.set('n', '<A-e>', vim.cmd.Ex, { noremap = true, silent = true })
-- vim.keymap.set("i", "{", "{}<Left>", { noremap = true })

vim.cmd("syntax off")
vim.opt.termguicolors = false 

vim.keymap.set("v", "<C-_>", ":s/^/;/<CR>:noh<CR>", { noremap = true, silent = true })
vim.keymap.set("v", "<C-\\>", ":s/^;//<CR>:noh<CR>", { noremap=true, silent=true })

vim.keymap.set({"n", "x"}, "d", '"_d')

vim.cmd [[
  iabbrev brb be <Enter> right back
  cabbrev W w
  cabbrev Q q
]]
