### Variables
set $mod Mod4
set $term alacritty
set $left h
set $right l
set $up k
set $down j

floating_modifier $mod

### Key bindings
bindsym $mod+Return exec $term
bindsym $mod+w kill
bindsym $mod+Shift+S exec bash -c 'maim -s | swappy -f -'
bindsym $mod+o exec sxiv -t ~/opt/walls
for_window [class="^Nsxiv$"] floating enable, resize set 1000 700, move position center

bindsym $mod+d exec exe
bindsym $mod+e exec emjpkr
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -b 'Yes, exit' 'i3-msg exit'"

# Focus movement
bindsym $mod+$left focus left
bindsym $mod+$right focus right
bindsym $mod+$up focus up
bindsym $mod+$down focus down

# Move containers
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$down move down

# Workspaces
bindsym $mod+1 workspace number 1
bindsym $mod+Shift+1 move container to workspace number 1; workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+Shift+2 move container to workspace number 2; workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+Shift+3 move container to workspace number 3; workspace number 3

bindsym $mod+Y workspace Y
bindsym $mod+Shift+Y move container to workspace Y; workspace  Y

bindsym $mod+F workspace F
bindsym $mod+Shift+F move container to workspace F; workspace  F

bindsym $mod+T workspace T
bindsym $mod+Shift+T move container to workspace T; workspace  T


for_window [title="specific-btop"] move to workspace T
assign [instance="Navigator"] 2
#assign [instance="discord.com__app"] F
#assign [instance="youtube.com"] Y

# Layout
workspace_layout tabbed
bindsym $mod+Shift+space floating toggle

### Appearance
font pango:Iosevka 13
for_window [class=".*"] border normal
default_border pixel 1
smart_borders on
client.focused #5FAF9F #5FAF9F #FFFFFF #5FAF9F #5FAF9F

### Media Keys 
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
#bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ && vol
#bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- && vol
#bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
#bindsym XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindsym XF86AudioRaiseVolume exec pamixer --increase 5 && vol
bindsym XF86AudioLowerVolume exec pamixer --decrease 5 && vol
bindsym XF86AudioMute exec pamixer --toggle-mute
bindsym XF86AudioMicMute exec pamixer --default-source --toggle-mute

