

# Mod key
super = Mod4

# Applications
super + Return
    alacritty
super + shift + s
    flameshot gui
super + d
    exe
super + e
    emjpkr

# Kill focused window
super + w
    bspc node -c

# Reload bspwm config
super + shift + c
    bspc wm -r

# Restart sxhkd
super + shift + r
    pkill -USR1 -x sxhkd

# Exit bspwm
super + shift + e
    bspc quit

# Focus movement
super + h
    bspc node -f west
super + j
    bspc node -f south
super + k
    bspc node -f north
super + l
    bspc node -f east

# Move windows
super + shift + h
    bspc node -s west
super + shift + j
    bspc node -s south
super + shift + k
    bspc node -s north
super + shift + l
    bspc node -s east

# Workspaces
super + 1
    bspc desktop -f 1
super + 2
    bspc desktop -f 2
super + 3
    bspc desktop -f 3
super + 4
    bspc desktop -f 4
super + 5
    bspc desktop -f 5
super + 6
    bspc desktop -f 6
super + 7
    bspc desktop -f 7
super + 8
    bspc desktop -f 8
super + 9
    bspc desktop -f 9

super + shift + 1
    bspc node -d 1 && bspc desktop -f 1
super + shift + 2
    bspc node -d 2 && bspc desktop -f 2
super + shift + 3
    bspc node -d 3 && bspc desktop -f 3
super + shift + 4
    bspc node -d 3 && bspc desktop -f 4
super + shift + 5
    bspc node -d 3 && bspc desktop -f 5
super + shift + 6
    bspc node -d 3 && bspc desktop -f 6
super + shift + 7
    bspc node -d 3 && bspc desktop -f 7
super + shift + 8
    bspc node -d 3 && bspc desktop -f 8
super + shift + 9
    bspc node -d 3 && bspc desktop -f 9

super + shift + space
    bspc node -t floating
super + v
    bspc node -t tiled

# Media keys
XF86MonBrightnessUp
    brightnessctl set +5%
XF86MonBrightnessDown
    brightnessctl set 5%-

XF86AudioRaiseVolume
    pamixer --increase 5 && vol
XF86AudioLowerVolume
    pamixer --decrease 5 && vol
XF86AudioMute
    pamixer --toggle-mute
XF86AudioMicMute
    pamixer --default-source --toggle-mute
